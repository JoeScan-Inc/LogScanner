<UserControl
    x:Class="RawViewer.Timeline.TimelinePlotView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RawViewer.Timeline"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>

        <oxy:PlotView Model="{Binding TimeLinePlot}" />
        <ComboBox
            MinWidth="120"
            Margin="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DisplayMemberPath="Key"
            Focusable="False"
            ItemsSource="{Binding PlotFunctions}"
            SelectedValue="{Binding SelectedPlotFunction}"
            SelectedValuePath="Value" />
    </Grid>
</UserControl>
