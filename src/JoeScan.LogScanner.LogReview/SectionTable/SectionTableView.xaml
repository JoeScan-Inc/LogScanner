<UserControl
    x:Class="JoeScan.LogScanner.LogReview.SectionTable.SectionTableView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JoeScan.LogScanner.LogReview.SectionTable"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <GroupBox Padding="0">
        <GroupBox.Header>
            <DockPanel MinHeight="30" LastChildFill="False">
                <Border
                    VerticalAlignment="Center"
                    BorderBrush="{x:Null}"
                    DockPanel.Dock="Left">
                    <TextBlock Margin="10,0,0,0">Section Values</TextBlock>
                </Border>
            </DockPanel>
        </GroupBox.Header>
        <ListView Name="lvUsers">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding something}" Header="Position" />
                    <GridViewColumn DisplayMemberBinding="{Binding Age}" Header="Fit" />
                    <GridViewColumn DisplayMemberBinding="{Binding Mail}" Header="# Pts" />
                </GridView>
            </ListView.View>
        </ListView>
    </GroupBox>
</UserControl>
