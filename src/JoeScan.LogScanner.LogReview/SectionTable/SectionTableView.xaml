<UserControl
    x:Class="JoeScan.LogScanner.LogReview.SectionTable.SectionTableView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:JoeScan.LogScanner.LogReview.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JoeScan.LogScanner.LogReview.SectionTable"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ListView ItemsSource="{Binding Model.Sections}" SelectedItem="{Binding Model.CurrentSection}">
        <ListView.Resources>
            <converters:DisplayUnitConverter x:Key="DisplayUnitConverter" />
        </ListView.Resources>
        <ListView.View>
            <GridView>
                <GridViewColumn DisplayMemberBinding="{Binding Path=SectionCenter, Converter={StaticResource DisplayUnitConverter}}" Header="Pos" />
                <GridViewColumn DisplayMemberBinding="{Binding Path=AcceptedPoints.Count}" Header="#Pts" />
                <GridViewColumn DisplayMemberBinding="{Binding Path=RawDiameterX, Converter={StaticResource DisplayUnitConverter}}" Header="Dia. X" />
                <GridViewColumn DisplayMemberBinding="{Binding Path=RawDiameterY, Converter={StaticResource DisplayUnitConverter}}" Header="Dia. Y" />
                <GridViewColumn DisplayMemberBinding="{Binding Path=FitError, Converter={StaticResource DisplayUnitConverter}}" Header="Fit Error" />
                <GridViewColumn DisplayMemberBinding="{Binding Path=Ovality, Converter={StaticResource DisplayUnitConverter}}" Header="Ovality" />
            </GridView>
        </ListView.View>
    </ListView>
    <!-- <DataGrid AutoGenerateColumns="True" ItemsSource="{Binding Sections}" /> -->
</UserControl>
