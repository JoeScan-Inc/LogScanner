<UserControl
    x:Class="JoeScan.LogScanner.Desktop.LogHistory.LogHistoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:cm="http://caliburnmicro.com"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:logHistory="clr-namespace:JoeScan.LogScanner.Desktop.LogHistory"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <DataGrid
            x:Name="Items"
            cm:Message.Attach="[Event MouseDoubleClick] = [Action RowDoubleClicked($eventArgs)]"
            AutoGenerateColumns="True"
            IsReadOnly="True">
            <b:Interaction.Behaviors>
                <logHistory:ColumnHeaderBehaviour />
            </b:Interaction.Behaviors>
        </DataGrid>
    </Grid>
</UserControl>